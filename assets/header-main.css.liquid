  display: none;
}

header-drawer {
  display: none;
}

@media screen and (max-width: 959px){  

  .header {
    padding: 22px 27px;
  }

  .header__menu-item {
    padding: 0 12.5px;
    font-size: 14px;
  }

}

@media screen and (max-width: 768px){  

  .Mobile_Show.header__inline-menu {
    display: block;
  }
  
  .Mobile_Show.header__inline-menu {
    order: 1;
  }
  
  .header__icons .header__icon--cart {
    margin-left: 0;
  }

  .header__heading {
    order: 2;
  }

  .header__inline-menu {
    display: none;
  }

  .header__shop-link.sh2 {
    display: none;
  }

  .header__icons {
    order: 2;
  }

  .header__inline-menu {
    display: none;
  }

  header-drawer {
    display: none;
  }
    
}

