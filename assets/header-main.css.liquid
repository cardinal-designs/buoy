/* About us menu slider - desktop */


@media screen and (min-width: 950px){  


  .menu-fixed {
    position: fixed!important;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    transition: all .3s ease;
    z-index: 9999;
    display: none;
  }

  .menu-fixed .bg {
    position: absolute;
    top: 0;
    left: 0;
    background: rgba(239,231,221,.9);
    width: 100%;
    height: 100%;
    display: block !important;
  }

  .menu-fixed .inside {
    background: #fff;
    position: absolute;
    top: 0;
    left: 0;
    height: 100%;
    width: 577px;
    display: flex;
    align-items: center;
    transition: transform .4s cubic-bezier(.405, .135, .095, 1);
    transition-delay: 200;
    transform: translateX(-100%);
    overflow: auto;
  }

  .menu-fixed.active .inside {
    transform: none!important;
  }

  .back {
    position: absolute;
    top: 30px;
    right: 30px;
    cursor: pointer;
  }
  .back svg.icon.icon-close {
    width: 15px;
    height: 15px;
  }

  .header__submenu .header__menu-item {
    padding: .95rem 3.5rem .95rem 2rem;
    padding: 20px 100px;
    font: var(--unnamed-font-style-normal) normal var(--unnamed-font-weight-300) var(--unnamed-font-size-35)/var(--unnamed-line-spacing-42) var(--unnamed-font-family-inter);
      letter-spacing: var(--unnamed-character-spacing-0);
        color: var(---1f2322-primary-charcoal);
          text-align: left;
          font: normal normal 300 35px/42px Inter;
          letter-spacing: 0px;
          color: #1F2322;
          opacity: 1;
          } 
  .header__submenu .header__menu-item:hover {
    font-weight: 500;
  }
  .header__inline-menu details[open]>.header__submenu{
    display: none;
    opacity: 0;
  }


}

@media(min-width: 950px) and (max-width: 1200px) {
  .header__submenu .header__menu-item {
    font-size: 32px;
    line-height: 40px;
    padding: 15px 120px;
  }
}

/* menu-drawer  */
div#menu-drawer{
  position: fixed;
  top: 0;
  height: 100%;
  width: 100%;
  background: transparent linear-gradient(180deg, #ECD8C500 0%, var(---f8f1eb-primary-beige-light) 100%) 0% 0% no-repeat padding-box;
    background: transparent linear-gradient(180deg, #ECD8C500 0%, #F8F1EB 100%) 0% 0% no-repeat padding-box;
    opacity: 1;
    z-index: 999;
    background-color: #FFF;
    }

.menu-drawer__utility-links{
  background: white;
  border-top: 1px solid #545759;
  opacity: 0.75;
  padding: 2.4rem 2.8rem;
}
.menu-drawer .menu-drawer__utility-links .list-social {
  display: none;
}

/*  */

.menu-drawer__logo {
  background: white;
  border-bottom: 1px solid #545759;
  opacity: 0.75;
  display: flex;
  align-content: center;
  justify-content: space-between;
  width: 100vw;
  height: auto;
  max-height: 55px;
  padding: 10px 20px;
}
.menu-drawer__logo .right-side {
  display: flex;
  align-items: center;
}

.menu-drawer__logo .right-side .modal__close-button.link {
  margin: 0 7px 0 20px;
}

.menu-drawer__navigation {
  padding: 5rem 0;
}

.menu-drawer__navigation-container{
  grid-template-rows: auto 1fr auto;
}

.menu-drawer__navigation .menu-drawer__menu-item.list-menu__item{
  font-size: 30px;
  line-height: 36px;
  letter-spacing: 0px;
  color: #1F2322;
  opacity: 1;
  font-weight: 500;
  padding: 1.1rem 2.8rem;
  display: flex;
  align-items: center;
}

.menu-drawer__menu-item > .icon-arrow{
  top: auto;
  transform: none;
  width: 30px;
  height: 15px;
}

.menu-drawer__navigation .menu-drawer__menu-item.list-menu__item:hover svg.icon-arrow {
  transform: translateX(5px);
}

.menu-drawer__navigation .menu-drawer__menu-item.list-menu__item:hover{
  font-weight: 600;
}

.menu-drawer__account {
  display: flex;
  align-items: center;
  padding: 0;
  margin-left: 0;
  font-size: 1.8rem;
  line-height: 21px;
  font-weight: 300;
}

.menu-drawer__submenu {
  background: transparent linear-gradient(180deg, #ECD8C500 0%, var(---f8f1eb-primary-beige-light) 100%) 0% 0% no-repeat padding-box;
    background: transparent linear-gradient(180deg, #ECD8C500 0%, #F8F1EB 100%) 0% 0% no-repeat padding-box;
    opacity: 1;
    background-color: #FFF !important;
    font-family: inter,sans-serif;
}

.menu-drawer__submenu .menu-drawer__menu-item.list-menu__item {
  font-family: inter,sans-serif;
  font-size: 18px;
  line-height: 30px;
  letter-spacing: 0;
  color: #1f2322;
  opacity: 1;
  font-weight: 300;
  padding: 0.4rem 2.8rem;
  display: flex;
  align-items: center;
}
.menu-drawer__submenu .menu-drawer__menu-item.list-menu__item:hover,
.menu-drawer__utility-links a:hover{
	font-weight: 500;
}

.menu-drawer__submenu .menu-drawer__close-button .icon-arrow {
  width: 30px;
  height: 15px;
  transition: transform .2s ease;
}

.menu-drawer__submenu .menu-drawer__close-button {
  font-size: 30px;
  line-height: 36px;
  font-family: inter,sans-serif;
}

.header__menu-item:hover .icon.icon-caret {
	transform: rotate(180deg);
}
li:focus, :focus{
	outline: none;	
}

