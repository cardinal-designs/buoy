<ul class="social-sharing list-social list-unstyled">
  <li class="list-social__item">
      <a class="list-social__link link link--text" href="//instagram.com/justaddbuoy"target="_blank">
        {% render 'icon-instagram' %}
        <span class="visually-hidden visually-hidden--inline">{{ 'general.social.alt_text.share_on_twitter' | t }}</span>
        <span class="visually-hidden visually-hidden--inline">{{ 'accessibility.link_messages.new_window' | t }}</span>
      </a>
  </li> 
  <li class="list-social__item">
      <a class="list-social__link link link--text" href="//twitter.com/share?text={{ share_title | url_param_escape }}&amp;url={{ shop.url | append: share_permalink }}"target="_blank">
        {% render 'icon-twitter' %}
        <span class="visually-hidden visually-hidden--inline">{{ 'general.social.alt_text.share_on_twitter' | t }}</span>
        <span class="visually-hidden visually-hidden--inline">{{ 'accessibility.link_messages.new_window' | t }}</span>
      </a>
   </li>
   <li class="list-social__item">
      <a class="list-social__link link link--text" href="//www.facebook.com/sharer.php?u={{ shop.url | append: share_permalink }}" target="_blank"> 
        {% render 'icon-facebook' %}
        <span class="visually-hidden visually-hidden--inline">{{ 'general.social.alt_text.share_on_facebook' | t }}</span>
        <span class="visually-hidden visually-hidden--inline">{{ 'accessibility.link_messages.new_window' | t }}</span>
      </a>
   </li>
</ul>