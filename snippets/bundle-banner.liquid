 <div class="bundle__banner">
    <div class="bundle__banner--inner">
      <div class="bundle__banner--image" style="position: relative; padding-bottom: 66.66%;">
        {% if settings.video_url != blank %}
          <video {% if settings.autoplay %}autoplay{% endif %}{% if settings.loop %} loop{% endif %}{% if settings.mute %} muted{% endif %} playsinline class="img-fill hide-mobile">
            <source src="{{ settings.video_url }}" type="video/mp4">
          </video>
        {% endif %}
        {% if settings.mobile_video_url != blank %}
          <video {% if settings.autoplay %}autoplay{% endif %}{% if settings.loop %} loop{% endif %}{% if settings.mute %} muted{% endif %} playsinline class="img-fill hide-desktop">
            <source src="{{ settings.mobile_video_url }}" type="video/mp4">
          </video>
        {% else %}
          <video {% if settings.autoplay %}autoplay{% endif %}{% if settings.loop %} loop{% endif %}{% if settings.mute %} muted{% endif %} playsinline class="img-fill hide-desktop">
            <source src="{{ settings.video_url }}" type="video/mp4">
          </video>
        {% endif %}
        {% if settings.video_url == blank and settings.image != blank %}
        <img
          srcset="{%- if settings.image.width >= 165 -%}{{ settings.image | img_url: '165x' }} 165w,{%- endif -%}
          {%- if settings.image.width >= 360 -%}{{ settings.image | img_url: '360x' }} 360w,{%- endif -%}
          {%- if settings.image.width >= 533 -%}{{ settings.image | img_url: '533x' }} 533w,{%- endif -%}
          {%- if settings.image.width >= 720 -%}{{ settings.image | img_url: '720x' }} 720w,{%- endif -%}
          {%- if settings.image.width >= 940 -%}{{ settings.image | img_url: '940x' }} 940w,{%- endif -%}
          {%- if settings.image.width >= 1066 -%}{{ settings.image | img_url: '1066x' }} 1066w{%- endif -%}"
          src="{{ settings.image | img_url: '533x' }}"
          sizes="(min-width: {{ settings.page_width }}px) {{ settings.page_width | minus: 130 | divided_by: 4 }}px, (min-width: 990px) calc((100vw - 130px) / 4), (min-width: 769px) calc((100vw - 120px) / 3), calc((100vw - 35px) / 2)"
          alt="{{ settings.image.alt | escape }}"
          loading="lazy" height="100%" width="100%"
          class="motion-reduce img-fill hide-mobile"
        >
        <img
          srcset="{%- if settings.mobile_image.width >= 165 -%}{{ settings.mobile_image | img_url: '165x' }} 165w,{%- endif -%}
          {%- if settings.mobile_image.width >= 360 -%}{{ settings.mobile_image | img_url: '360x' }} 360w,{%- endif -%}
          {%- if settings.mobile_image.width >= 533 -%}{{ settings.mobile_image | img_url: '533x' }} 533w,{%- endif -%}
          {%- if settings.mobile_image.width >= 720 -%}{{ settings.mobile_image | img_url: '720x' }} 720w,{%- endif -%}
          {%- if settings.mobile_image.width >= 940 -%}{{ settings.mobile_image | img_url: '940x' }} 940w,{%- endif -%}
          {%- if settings.mobile_image.width >= 1066 -%}{{ settings.mobile_image | img_url: '1066x' }} 1066w{%- endif -%}"
          src="{{ settings.mobile_image | img_url: '533x' }}"
          sizes="(min-width: {{ settings.page_width }}px) {{ settings.page_width | minus: 130 | divided_by: 4 }}px, (min-width: 990px) calc((100vw - 130px) / 4), (min-width: 769px) calc((100vw - 120px) / 3), calc((100vw - 35px) / 2)"
          alt="{{ settings.mobile_image.alt | escape }}"
          loading="lazy" height="100%" width="100%"
          class="motion-reduce img-fill hide-desktop"
        >
        {% endif %}
      </div>
      <div class="bundle__banner--title">
        <h1 class="product__title">{{ settings.title }}</h1>
        <div class="sh4">{{ settings.text }}</div>
      </div>
      <div class="bundle__banner--steps">
        <div class="bundle__banner--step">
          <div class="bundle__banner--step-image">
            <img
              srcset="{%- if settings.image1.width >= 165 -%}{{ settings.image1 | img_url: '165x' }} 165w,{%- endif -%}
              {%- if settings.image1.width >= 360 -%}{{ settings.image1 | img_url: '360x' }} 360w,{%- endif -%}
              {%- if settings.image1.width >= 533 -%}{{ settings.image1 | img_url: '533x' }} 533w,{%- endif -%}
              {%- if settings.image1.width >= 720 -%}{{ settings.image1 | img_url: '720x' }} 720w,{%- endif -%}
              {%- if settings.image1.width >= 940 -%}{{ settings.image1 | img_url: '940x' }} 940w,{%- endif -%}
              {%- if settings.image1.width >= 1066 -%}{{ settings.image1 | img_url: '1066x' }} 1066w{%- endif -%}"
              src="{{ settings.image1 | img_url: '533x' }}"
              sizes="(min-width: {{ settings.page_width }}px) {{ settings.page_width | minus: 130 | divided_by: 4 }}px, (min-width: 990px) calc((100vw - 130px) / 4), (min-width: 769px) calc((100vw - 120px) / 3), calc((100vw - 35px) / 2)"
              alt="{{ settings.image1.alt | escape }}"
              loading="lazy" height="100%" width="100%"
              class="motion-reduce img-fill"
            >
          </div>
          <span>STEP 1</span>
          <p class="body-large">{{ settings.text1 }}</p>
        </div>
        <div class="bundle__banner--step">
