{{ 'section-side-by-side-text.css' | asset_url | stylesheet_tag }}

{% style %}
  {%  if section.blocks.size > 1 %}
    .side-by-side__text-container {
      grid-template-columns: 1fr 1fr;
      gap: 60px;
    }
  {% else %}
    .side-by-side__text-container {
      grid-template-columns: 1fr;
    }
  {% endif %}
{%  endstyle %}

<div style="background-color: {{ section.settings.background }};" class="side-by-side__container">
  <div class="page-width">
  <div class="side-by-side__text-container">
    {% for block in section.blocks %}
  <div style="color: {{ block.settings.color }};" class="side-by-side__text">
    <h2 class="h3 light">{{ block.settings.title }}</h2>
    <p class="h6 light">{{ block.settings.text }}</p>
  </div>
    {% endfor %}
  </div>
  <a id="join-convo" href="{{ section.settings.link }}" class="button button--white">{{ section.settings.link_text }}</a>
</div>
</div>


{% schema %}
  {
    "name": "Side by Side Text",
    "settings": [
      {
        "type": "text",
        "id": "title1",
        "label": "Title 1"
      },
      {
        "type": "textarea",
        "id": "text1",
        "label": "Text 1"
      },
      {
        "type": "text",
        "id": "title2",
        "label": "Title 2"
      },
      {
        "type": "textarea",
        "id": "text2",
        "label": "Text 2"
      },
      {
        "type": "color",
        "id": "background",
        "label": "Background Color"
      },
	  {
        "type": "color",
        "id": "color",
        "label": "Text Color"
      },
	  {
        "type": "url",
        "id": "link",
        "label": "Link"
      },
	  {
        "type": "text",
        "id": "link_text",
        "label": "Link Text"
      }
    ],
    "presets": [
      {
        "name": "Side by Side Text"
      }
    ]
  }
{% endschema %}