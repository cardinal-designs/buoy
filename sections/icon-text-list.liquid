{{ 'section-icon-text-list.css' | asset_url | stylesheet_tag }}

<div class="page-width icon-text__container hide-desktop">
  {% for block in section.blocks limit: 4 %}
  <div class="icon-text__block">
    <img src="{{ block.settings.image | img_url: 'master' }}" />
    <p>{{ block.settings.title }}</p>
  </div>
  {% endfor %}
</div>
<div class="hide-mobile page-width icon-text__container">
  {% for block in section.blocks %}
  <div class="icon-text__block">
    <img src="{{ block.settings.image | img_url: 'master' }}" />
    <p>{{ block.settings.title }}</p>
  </div>
  {% endfor %}
</div>

{% schema %}
{
  "name": "Icon Text List",
  "settings": [],
  "blocks": [
    {
      "type": "block",
      "name": "Block",
      "settings": [
        {
          "type": "image_picker",
          "id": "image",
          "label": "Image"
        },
        {
          "type": "text",
          "id": "title",
          "label": "Title"
        }
      ]
    }
  ],
   "presets": [
      {
        "name": "Icon Text List"
      }
    ]
}
{% endschema %}