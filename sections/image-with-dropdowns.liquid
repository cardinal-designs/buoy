{{ 'section-image-with-dropdowns.css' | asset_url | stylesheet_tag }}

<div class="image-with-dropdowns__container">
  <div class="page-width">
    <div class="image-with-dropdowns__image">
      {% if section.settings.video_url != blank %}
      <video autoplay loop muted playsinline class="video">
        <source src="{{ section.settings.video_url }}" type="video/mp4">
        Your browser does not support the video tag.
      </video>
      {% else %}
      {% render 'lazy-image' image: section.settings.image, classes: 'img-fill' %}
      {% endif %}    
    </div>
    <div>
      <h2>{{ section.settings.title }}</h2>
      <p class="sh2">{{ section.settings.text }}</p>
      <div class="image-with-dropdowns__dropdown">
        {% for block in section.blocks %}
        <div class="image-with-dropdowns__content-point">
          <div class="image-with-dropdowns__q">
          <div class="image-with-dropdowns__content-circle">
            <h5>{{ block.settings.emoji }}</h5>
            </div>
            <div class="image-with-dropdowns__content-text">
              <h6>{{ block.settings.title }}</h6>
            </div>
          </div>
          <div class="image-with-dropdowns__a">
            <p class="light">{{ block.settings.subtitle }}</p>
            <p class="sh4">{{ block.settings.text }}</p>
          </div>
        </div>
        {% endfor %}
      </div>
    </div>
  </div>
</div>



{% schema %}
  {
    "name": "Image With Dropdowns",
    "settings": [
      {
        "type": "text",
        "id": "video_url",
        "label": "Video Url"
      },
      {
        "type": "image_picker",
        "id": "image",
        "label": "Image"
      },
      {
        "type": "text",
        "id": "title",
        "label": "Title"
      },
      {
        "type": "textarea",
        "id": "text",
        "label": "Text"
      }
	],
    "blocks": [
      {
        "type": "block",
        "name": "Block",
        "settings": [
          {
            "type": "text",
            "id": "title",
            "label": "Title"
          },
          {
            "type": "text",
            "id": "emoji",
            "label": "Emoji"
          },
          {
            "type": "text",
            "id": "subtitle",
            "label": "Subtitle"
          },
          {
            "type": "textarea",
            "id": "text",
            "label": "Text"
          }
        ]
      }
    ],
    "presets": [
      {
        "name": "Image With Dropdowns"
      }
    ]
  }
{% endschema %}
