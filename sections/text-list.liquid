{{ 'section-text-list.css' | asset_url | stylesheet_tag }}

<div class="text-list">
  <div class="page-width">
    <div class="text-list__container">
      <h6 class="light">{{ section.settings.text }}</h6>
    </div>
    {% if section.blocks.size > 1 %}
      <div class="text-list__list">
        {% for block in section.blocks %}
          {% if block.type == 'list_item' %}
          <p class="body medium">{{ block.settings.text }}
            {% if section.settings.show_divider %}
              {% unless forloop.last %}&nbsp;&nbsp;&nbsp;|&nbsp;&nbsp;&nbsp;{% endunless %}
            {% endif %}
          </p>
        {% endif %}
        {% endfor %}
      </div>
    {% endif %}
    {% if section.settings.button_label != blank %}
      <a href="{{ section.settings.button_link }}" class="body bold arrow-link">{{ section.settings.button_label }} {% render 'icon-arrow-right' %}</a>
    {% endif %}
  </div>
</div>

{% schema %}
  {
    "name": "Text & List",
    "settings": [
      {
        "type": "textarea",
        "id": "text",
        "label": "Text",
        "info": "Wrap colorful text in a span tag. ex) <span>Text Here</span>"
      },
	  {
        "type": "text",
        "id": "button_label",
        "label": "Button Label"
      },
      {
        "type": "url",
        "id": "button_link",
        "label": "Button Link"
      },
	  {
        "type": "checkbox",
        "id": "show_divider",
        "label": "Show Divider",
		"default": true
      }
    ],
    "blocks": [
      {
        "type": "list_item",
        "name": "List Item",
        "settings": [
          {
            "type": "text",
            "id": "text",
            "label": "Text"
          }
        ]
      },
      {
        "type": "list_check",
        "name": "List Check",
        "settings": [
          {
            "type": "text",
            "id": "text",
            "label": "Text"
          }
        ]
      }
    ],
    "presets": [
      {
        "name": "Text & List"
      }
    ]
  }
{% endschema %}