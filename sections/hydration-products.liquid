{{ 'section-hydration-products.css' | asset_url | stylesheet_tag }}

<div class="
  hydration-products
  background--{{ section.settings.background }}
  {% if section.settings.add_top_border %} top-border{% endif %}
  {% if section.settings.add_bottom_border %} bottom-border{% endif %}
">
  <div class="page-width">
    <div class="hydration-products__container">
      <div class="h3 hydration-products__heading">
        {{ section.settings.heading_text }}
      </div>

      <div class="sh2 hydration-products__subtitle">
        {{ section.settings.subtitle }}
      </div>

      <div class="hydration-products__grid">
        {% for block in section.blocks %}
          {% assign current_product = all_products[block.settings.product] %}

          <div class="hydration-products__grid-item">
            <img src="{{ current_product.featured_media | img_url: '270x' }}"/>
          </div>
        {% endfor %}
      </div>
    </div>
  </div>
</div>

{% schema %}
  {
    "name": "Hydration Products",
    "settings": [
      {
        "type": "text",
        "id": "heading_text",
        "label": "Title"
      },
      {
        "type": "richtext",
        "id": "subtitle",
        "label": "Subtitle"
      },
      {
        "type": "select",
        "id": "background",
        "label": "Background",
        "options": [
          {
            "value": "top",
            "label": "Gradient Top to Bottom"
          },
          {
            "value": "bottom",
            "label": "Gradient Bottom to Top"
          },
          {
            "value": "none",
            "label": "None"
          }
        ],
        "default": "none"
      },
      {
        "type": "checkbox",
        "id": "add_top_border",
        "label": "Add Top Border"
      },
      {
        "type": "checkbox",
        "id": "add_bottom_border",
        "label": "Add Bottom Border"
      }
    ],
    "max_blocks": 4,
    "blocks": [
      {
        "type": "block",
        "name": "Block",
        "settings": [
          {
            "type": "product",
            "id": "product",
            "label": "Product"
          }
        ]
      }
    ],
    "presets": [
      {
        "name": "Hydration Products"
      }
    ]
  }
{% endschema %}