{{ 'component-hsa-drawer.css' | asset_url | stylesheet_tag }}

{% assign ss = section.settings %}

<div 
  id="hsaSideDrawer" 
  data-product-name="{{ ss.product_name }}" 
  class="hsa-side-drawer"
  {% if template == 'page.clear-pee-club' %}
    style="top: 0;"
  {% endif %}
>
  <div class="drawer__wrapper-main">
    <div class="drawer__header">
      <a href="javascript:void(0)" class="drawer__close js-hsa-close hide-mobile">
        <span>Close</span> {% render 'icon-close-drawer' %}</a>
    </div>  
    <div class="drawer__title-wrapper">
      {%- if ss.product_name != blank -%}
        <div class="drawer__product-name">{{ ss.product_name }}</div>
      {%- endif -%}
      {%- if ss.title != blank -%}
        <div class="drawer__title">{{ ss.title }}</div>
      {%- endif -%}
    </div>
    {%- if ss.notification != blank -%}
      <div class="drawer__notification-wrapper">
        <span class="drawer__notification">{{ ss.notification }}</span>
      </div>
    {%- endif -%}
    {%- if ss.about != blank -%}
      <div class="drawer__about-container">
        <p class="drawer__about">{{ ss.about }}</p>
      </div>
    {%- endif -%}
    {% comment %}
    <div class="drawer__desktop-continue hide-mobile">
      <a href="javascript:void(0)" class="drawer__continue-cta button button--full-width js-hsa-close">Keep Shopping</a>        
    </div>
    {% endcomment %}
  </div>
  {% comment %}
  <div class="drawer__mobile-continue hide-desktop">
    <a href="javascript:void(0)" class="drawer__continue-cta drawer__continue-cta-mobile button button--full-width js-hsa-close">Keep Shopping</a>        
  </div>
  {% endcomment %}
</div>

{% schema %}
  {
    "name": "HSA Drawer",
    "settings": [
      {
        "type": "text",
        "id": "product_name",
        "label": "Product Name"
      },
      {
        "type": "text",
        "id": "title",
        "label": "Title"
      },
      {
        "type": "text",
        "id": "notification",
        "label": "Notification"
      },
      {
        "type": "textarea",
        "id": "about",
        "label": "About"
      }
    ],
    "presets": [
      {
        "name": "HSA Drawer"
      }
    ]
  }
{% endschema %}