{{ 'section-to-be-seen-video-text.css' | asset_url | stylesheet_tag }}

<div style="background-color: {{ section.settings.background }};" class="to-be-seen-video__container">
  <div style="color: {{ section.settings.color }};" class="page-width">
    <h1>{{ section.settings.title }}</h1>
    <h6 class="light">{{ section.settings.subtitle }}</h6>
    <div class="video-section__media">
      {%- if section.settings.video_url.type == 'youtube' -%}
      <iframe src="https://www.youtube.com/embed/{{ section.settings.video_url.id }}?enablejsapi=1" class="js-youtube" allow="autoplay; encrypted-media" allowfullscreen ></iframe>
      {%- else -%}
      <iframe src="https://player.vimeo.com/video/{{ section.settings.video_url.id}}" class="js-vimeo" allow="autoplay; encrypted-media" allowfullscreen></iframe>
      {%- endif -%}
    </div>
    <a href="{{ section.settings.link }}" class="button button--white">{{ section.settings.link_text }}</a>
    <p>{{ section.settings.text }}</p>
  </div>
</div>

{% schema %}
  {
    "name": "To Be Seen Video Text",
    "settings": [
      {
        "type": "text",
        "id": "title",
        "label": "Title"
      },
      {
        "type": "textarea",
        "id": "subtitle",
        "label": "Subtitle"
      },
      {
        "type": "video_url",
        "id": "video_url",
        "accept": [
          "youtube",
          "vimeo"
        ],
        "default": "https://vimeo.com/77477140",
        "label": "Video",
        "placeholder": "t:sections.video.settings.video_url.placeholder"
	  },
      {
        "type": "textarea",
        "id": "text",
        "label": "Text"
      },
	  {
        "type": "url",
        "id": "link",
        "label": "Link"
      },
	  {
        "type": "text",
        "id": "link_text",
        "label": "Link Text"
      },
      {
        "type": "color",
        "id": "background",
        "label": "Background Color"
      },
	  {
        "type": "color",
        "id": "color",
        "label": "Text Color"
      }
    ],
    "presets": [
      {
        "name": "To Be Seen Video Text"
      }
    ]
  }
{% endschema %}
