                        {{ 'products.product.sold_out' | t }}
                        {%- endif -%}
                    </div>
                      </button>
                      {%- if block.settings.show_dynamic_checkout -%}
                        {{ form | payment_button }}
                      {%- endif -%}
                    </div>
                    {%- liquid
                      assign currentVariant = currentVariant
                      assign requiresPlan = product.requires_selling_plan
