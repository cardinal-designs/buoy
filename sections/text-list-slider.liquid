{{ 'section-text-list.css' | asset_url | stylesheet_tag }}
{{ 'text-list-slider.css' | asset_url | stylesheet_tag }}

<div class="text-list text-list-slider">
  <div class="page-width">
    <div class="text-list__container">
      <h6 class="light">{{ section.settings.text }}</h6>
    </div>
    <div class="text-list__list hide-mobile">
      {% for block in section.blocks %}
        <p class="body medium">{{ block.settings.text }}
          {% if section.settings.show_divider %}
          {% unless forloop.last %}&nbsp;&nbsp;&nbsp;|&nbsp;&nbsp;&nbsp;{% endunless %}
          {% else %}
          
          {% endif %}
        </p>
      {% endfor %}
    </div>
    <div class="text-list__list hide-desktop">
      {% for block in section.blocks %}
        <p class="body medium">{{ block.settings.text }}
          {% if section.settings.show_divider %}
          {% unless forloop.last %}&nbsp;&nbsp;&nbsp;|&nbsp;&nbsp;&nbsp;{% endunless %}
          {% else %}
          
          {% endif %}
        </p>
      {% endfor %}
    </div>
    {% if section.settings.button_label != blank %}
    <a href="{{ section.settings.button_link }}" class="body bold arrow-link">{{ section.settings.button_label }} {% render 'icon-arrow-right' %}</a>
    {% endif %}
  </div>
</div>

<script type="text/javascript">
  jQuery( document ).ready(function() {
    jQuery('.text-list-slider .text-list__list.hide-desktop').slick({
           slidesToShow: 1,
           slidesToScroll: 1,
           arrows: true,
           fade: false,
           infinite: false,
           speed: 2000,
      	   centerMode: true,
      	   autoplay: true,
           variableWidth: true
           });
  });
</script>

{% schema %}
  {
    "name": "Text List Slider",
    "settings": [
      {
        "type": "textarea",
        "id": "text",
        "label": "Text",
        "info": "Wrap colorful text in a span tag. ex) <span>Text Here</span>"
      },
	  {
        "type": "text",
        "id": "button_label",
        "label": "Button Label"
      },
      {
        "type": "url",
        "id": "button_link",
        "label": "Button Link"
      },
	  {
        "type": "checkbox",
        "id": "show_divider",
        "label": "Show Divider",
		"default": true
      }
    ],
    "blocks": [
      {
        "type": "list_item",
        "name": "List Item",
        "settings": [
          {
            "type": "text",
            "id": "text",
            "label": "Text"
          }
        ]
      }
    ]
  }
{% endschema %}