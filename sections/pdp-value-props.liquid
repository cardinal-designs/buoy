<div class="pdp-value-props{% if section.settings.no_background %} no-background{% endif %}">
  <div class="page-width">
    <div class="pdp-value-props__text-container">
      <p class="h6 light">{{ section.settings.text }}</p> 
    </div>
    <div class="pdp-value-props__props-container no-scrollbar drag-scroll">
      <div class="pdp-value-props__props-slider">
        {% for block in section.blocks %}
          {% if block.type == 'value_prop' %}
            <div class="pdp-value-props__prop">
              <h3 class="float {% cycle '', 'is-reversed' %}">{{ block.settings.emoji }}</h3>
              <p class="body">{{ block.settings.text }}</p>
            </div>
          {% endif %}
        {% endfor %}
      </div>
    </div>
    <div class="pdp-value-props__links-container">
      <a class="pdp-value-props__link body medium" href="#comparison">{{ section.settings.left_link_label }}</a>
      <a class="pdp-value-props__link body medium" href="{{ product.metafields.my_fields.whitepages_pdf.value.url }}" target="_blank">See Buoy's Whitepaper</a>
    </div>
  </div>
</div>

