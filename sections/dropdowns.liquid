{{ 'section-dropdowns.css' | asset_url | stylesheet_tag }} 

<div class="dropdowns__container page-width">
  <h2 class="h4">{{ section.settings.title }}</h2>
  <p>{{ section.settings.subtext }}</p>
  <div class="dropdown-ind-container">
    {% for block in section.blocks %}
    <div class="dropdown-ind">
      <div class="dropdown-ind__text">
        <h4>{{ block.settings.title }}</h4>
        <p>{{ block.settings.text }}</p>
      </div>
      <img src="{{ block.settings.img | img_url: 'master' }}"/>
    </div>
    {% endfor %}
  </div>
</div>


{% schema %}
  {
    "name": "Dropdowns",
    "settings": [
      {
        "type": "text",
        "id": "title",
        "label": "Title"
      },
      {
        "type": "text",
        "id": "subtext",
        "label": "Subtext"
      }
    ],
    "blocks": [
      {
        "type": "dropdown",
        "name": "Dropdown",
        "settings": [
          {
            "type": "text",
            "id": "title",
            "label": "Title"
          },
          {
            "type": "textarea",
            "id": "text",
            "label": "Text"
          },
          {
            "type": "image_picker",
            "id": "img",
            "label": "Image"
          }
        ]
      }
    ],
    "presets": [
      {
        "name": "Dropdowns"
      }
    ]
  }
{% endschema %}