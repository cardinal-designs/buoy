{{ 'section-testimonials-slider.css' | asset_url | stylesheet_tag }}

<div class="testimonials-slider">
  <div class="testimonials-slider__img-slider-wrapper">
    <div class="testimonials-slider__img-slider">
      <div class="testimonials-slider__img-slide">
        {% render 'lazy-image' image: section.settings.image %}
      </div>
      {% if section.settings.image2 != blank %}
        <div class="testimonials-slider__img-slide">
          {% render 'lazy-image' image: section.settings.image2 %}
        </div>
      {% endif %}
      {% if section.settings.image3 != blank %}
        <div class="testimonials-slider__img-slide">
          {% render 'lazy-image' image: section.settings.image3 %}
        </div>
      {% endif %}
      {% if section.settings.image4 != blank %}
        <div class="testimonials-slider__img-slide">
          {% render 'lazy-image' image: section.settings.image4 %}
        </div>
      {% endif %}
    </div>
  </div>

  <div class="testimonials-slider__marquee">
    <div class="testimonials-slider__marquee-container">
      {% for block in section.blocks %}
        <div class="testimonials-slider__marquee-item">
          <h2>{{ block.settings.testimonial }}</h2>
        </div>
      {% endfor %}
    </div>
    <div class="testimonials-slider__marquee-container">
      {% for block in section.blocks %}
        <div class="testimonials-slider__marquee-item">
          <h2>{{ block.settings.testimonial }}</h2>
        </div>
      {% endfor %}
    </div>
  </div>
</div>

{% schema %}
  {
    "name": "Testimonials Slider",
    "settings": [
      {
        "type": "image_picker",
        "id": "image",
        "label": "Image"
      },
	  {
        "type": "image_picker",
        "id": "image2",
        "label": "Image 2 (Optional)"
      },
	  {
        "type": "image_picker",
        "id": "image3",
        "label": "Image 3 (Optional)"
      },
	  {
        "type": "image_picker",
        "id": "image4",
        "label": "Image 4 (Optional)"
      }
    ],
    "blocks": [
      {
        "type": "testimonial",
        "name": "Testimonial",
        "settings": [
          {
            "type": "textarea",
            "id": "testimonial",
            "label": "Testimonial"
          }
        ]
      }
    ],
    "presets": [
      {
        "name": "Testimonials Slider"
      }
    ]
  }
{% endschema %}