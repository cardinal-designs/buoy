{{ 'section-text-two-blocks.css' | asset_url | stylesheet_tag }}

{% style %}
  {%  if section.blocks.size == 2 %}
    .
  {% else %}

  {% endif %}
{% endstyle %}

<div style="background: {{ section.settings.background }};" class="text-two-blocks__container">
  <div style="color: {{ section.settings.color }};" class="page-width">
    <h1>{{ section.settings.title }}</h1>
    <h6 class="light">{{ section.settings.subtitle }}</h6>
    <div>
    {% for block in section.blocks %}
      <div>
        {% render 'lazy-image' image: block.settings.image, classes: '' %}
        <div>
          
        </div>           
      </div>
    {% endfor %}
    </div>
  </div>
</div>

{% schema %}
  {
    "name": "Text Two Blocks",
    "settings": [
      {
        "type": "text",
        "id": "title",
        "label": "Title"
      },
      {
        "type": "textarea",
        "id": "subtitle",
        "label": "Subtitle"
      },
      {
        "type": "textarea",
        "id": "background",
        "label": "Background Style"
      }
    ],
    "blocks": [
      {
        "type": "block",
        "name": "block",
        "limit": 2,
        "settings": [
          {
            "type": "image_picker",
            "id": "image",
            "label": "Image"
          },
          {
            "type": "text",
            "id": "title",
            "label": "Title"
          },
          {
            "type": "text",
            "id": "text",
            "label": "Text"
          },
          {
            "type": "text",
            "id": "btn_text",
            "label": "Button Text"
          },
          {
            "type": "url",
            "id": "btn_link",
            "label": "Button Link"
          },
          {
            "type": "text",
            "id": "link_text",
            "label": "Link Text"
          },
          {
            "type": "url",
            "id": "link_link",
            "label": "Link"
          }
        ]
      }
    ],
    "presets": [
      {
        "name": "Text Two Blocks"
      }
    ]
  }
{% endschema %}
