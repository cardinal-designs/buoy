{{ 'section-marquee.css' | asset_url | stylesheet_tag }}

<div style="{% if section.settings.background != blank %}background: {{ section.settings.background }};{% endif %}" class="marquee{% if section.settings.add_border %} add-border{% endif %}{% if section.settings.no_background %} no-background{% endif %}">
  <div class="marquee__container">
    {% for block in section.blocks %}
      <div class="marquee__item">
        <p class="sh2 light">{{ block.settings.text }}</p>
      </div>
    {% endfor %}
  </div>
  <div class="marquee__container">
    {% for block in section.blocks %}
      <div class="marquee__item">
        <p class="sh2 light">{{ block.settings.text }}</p>
      </div>
    {% endfor %}
  </div>
</div>

{% schema %}
  {
    "name": "Marquee",
    "settings": [
      {
        "type": "checkbox",
        "id": "add_border",
        "label": "Add Border"
      },
      {
        "type": "checkbox",
        "id": "no_background",
        "label": "No Background"
      },
      {
        "type": "color",
        "id": "background",
        "label": "Background Color (not default)",
        "default": "#F8F1EB"
      },
      {
        "type": "checkbox",
        "id": "emoji",
        "label": "Include emoji?",
        "default": false
      }
    ],
    "blocks": [
      {
        "type": "marquee_item",
        "name": "Marquee Item",
        "settings": [
          {
            "type": "text",
            "id": "text",
            "label": "Text"
          }
        ]
      }
    ],
    "presets": [
      {
        "name": "Marquee"
      }
    ]
  }
{% endschema %}