{{ 'section-left-image-text.css' | asset_url | stylesheet_tag }}

<div id="left-image-text__container" style="background-color: {{ section.settings.color }};" class="left-image-text__container">
  <div class="left-image-text__image">
    {% render 'lazy-image' image: section.settings.image, classes: '' %}
  </div>
  <div class="left-image-text__text">
    <p class="left-image-text__suptitle">{{ section.settings.suptitle }}</p>
    <h3 class="medium">{{ section.settings.title }}</h3>
    <p class="sh2 light">{{ section.settings.text }}</p>
    <a class="button" href="{{ section.settings.button_link }}">{{ section.settings.button_label }}</a>
  </div>
</div>

{% schema %}
{
  "name": "Left Image Text",
  "settings": [
    {
      "type": "color",
      "id": "color",
      "label": "Background Color"
    },    
    {
      "type": "image_picker",
      "id": "image",
      "label": "Image"
    },
    {
      "type": "text",
      "id": "suptitle",
      "label": "Suptitle"
    },
    {
      "type": "text",
      "id": "title",
      "label": "Title"
    },
    {
      "type": "textarea",
      "id": "text",
      "label": "Text"
    },
    {
      "type": "text",
      "id": "button_label",
      "label": "Button label"
    },
    {
      "type": "url",
      "id": "button_link",
      "label": "Button link"
    }
  ],
   "presets": [
    {
      "name": "Left Image Text"
    }
  ]
}
{% endschema %}