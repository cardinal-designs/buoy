{{ 'section-image-dropdowns.css' | asset_url | stylesheet_tag }} 

<div class="page-width image-dropdowns__container">
  <div class="image-dropdowns__text">
    <h3>{{ section.settings.title }}</h3>
    <div class="image-dropdowns__drops">
    {% for block in section.blocks %}
      <div class="image-dropdowns__drop">
        <div class="image-dropdowns__drop-title">
          <h2 class="sh2">{{ block.settings.title }}</h2>
        </div>
        <p>{{ block.settings.text }}</p>
      </div>
    {% endfor %}
    </div>
    <h6>{{ section.settings.subtext }}</h6>
  </div>
  <div class="image-dropdowns__image">
    <img src="{{ section.settings.img | img_url: 'master' }}"
  </div>
</div>

{% schema %}
  {
    "name": "Image Dropdowns",
    "settings": [
      {
        "type": "text",
        "id": "title",
        "label": "Title"
      },
      {
        "type": "image_picker",
        "id": "img",
        "label": "Image"
      },
      {
        "type": "textarea",
        "id": "subtext",
        "label": "Subtext"
      }
    ],
    "blocks": [
      {
        "type": "dropdown",
        "name": "Dropdown",
        "settings": [
          {
            "type": "text",
            "id": "title",
            "label": "Title"
          },
          {
            "type": "textarea",
            "id": "text",
            "label": "Text"
          }
        ]
      }
    ],
    "presets": [
      {
        "name": "Image Dropdowns"
      }
    ]
  }
{% endschema %}