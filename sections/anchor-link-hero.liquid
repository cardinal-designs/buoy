{{ 'anchor-link-hero.css' | asset_url | stylesheet_tag }}
<div class="anchor-links__sticky">
  <div class="page-width">
    <ul class="anchor-links__list no-scrollbar">
      {% if section.blocks != blank %}
        <li class="anchor-links__item active">
          <button onclick="window.scrollTo({ top: 0, behavior: 'smooth' });">
            View All
          </button>
        </li>
      {% endif %}
      {% for link in section.blocks %}
        <li class="anchor-links__item">
          <button onclick="document.querySelector('[data-anchor=\'{{ link.settings.heading | downcase | handle }}\']').scrollIntoView({behavior: 'smooth'})">
            {{ link.settings.heading }}
          </button>
        </li>
      {% endfor %}
    </ul>
  </div>
</div>

<style>
  #shopify-section-{{ section.id }} {
    position: sticky;
    top: var(--sticky-header-height);
    background: white;
    z-index: 3;
  }
</style>

{% schema %}
  {
    "name": "Anchor Links",
    "blocks": [
      {
        "name": "Link",
        "type": "Link",
        "settings": [
          {
            "type": "text",
            "id": "heading",
            "label": "Section heading to link to"
          }
        ]
      }
    ],
    "presets": [
      {
        "name": "Anchor Links"
      }
    ]
  }
{% endschema %}