{{ 'section-give-back-blocks.css' | asset_url | stylesheet_tag }}

<div class="give-back__container">
<div class="page-width">
  <h2>{{ section.settings.title }}</h2>
  <div>
  {% for block in section.blocks %}
    <div>
                    {% include 'lazy-image' image: block.settings.image, classes: 'img-fill' %}
      <div>
        <h5></h5>
        <p></p>
        <a href="{{ section.settings.link }}" class="button">{{ section.settings.link_text }}</a>
      </div>

    </div>
    {% endfor %}
  </div>
</div>
</div>

{% schema %}
  {
    "name": "Give Back Blocks",
    "settings": [
      {
        "type": "text",
        "id": "title",
        "label": "Title"
      }
	],
    "blocks": [
      {
        "type": "block",
        "name": "Block",
        "settings": [
          {
            "type": "image_picker",
            "id": "image",
            "label": "Image"
          },
          {
            "type": "text",
            "id": "title",
            "label": "Title"
          },
          {
            "type": "textarea",
            "id": "text",
            "label": "Text"
          },
          {
            "type": "url",
            "id": "link",
            "label": "Button Link"
          },
          {
            "type": "text",
            "id": "link_text",
            "label": "Button Text"
          }
        ]
      }
    ],
    "presets": [
      {
        "name": "Give Back Blocks"
      }
    ]
  }
{% endschema %}
