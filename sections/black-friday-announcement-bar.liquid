<div class="hide-mobile announcement-bar" role="region" aria-label="{{ 'sections.header.announcement' | t }}" {{ section.shopify_attributes }}>
  {%- if section.settings.text != blank -%}
    {%- if section.settings.link != blank -%}
      <a href="{{ section.settings.link }}" class="announcement-bar__link">
    {%- endif -%}
        <p class="announcement-bar__message body">
          {{ section.settings.text }}
        </p>
    {%- if section.settings.link != blank -%}
      </a>
    {%- endif -%}
  {%- endif -%}
  {% comment %}
    <button class="announcement-bar__close">{% render 'icon-close' %}</button>
  {% endcomment %}
  {% if section.settings.btn_text != blank %}
    <a class="Announcement_Button" href="{{ section.settings.btn_link }}">{{ section.settings.btn_text }}</a>
  {% endif %}
</div>

{% if section.settings.hide_mobile %}
<style>
@media screen and (max-width: 768px) {
  #shopify-section-announcement-bar {
    display: none;
  }
}
</style>
{% endif %}

{% schema %}
{
  "name": "BF Announcement Bar",
  "settings": [
    {
      "type": "textarea",
      "id": "text",
      "label": "t:sections.announcement-bar.blocks.announcement.settings.text.label"
    },
    {
      "type": "url",
      "id": "link",
      "label": "t:sections.announcement-bar.blocks.announcement.settings.link.label"
    },
    {
      "type": "text",
      "id": "btn_text",
      "default": "Start Here",
      "label": "Button Text"
    },
    {
      "type": "url",
      "id": "btn_link",
      "label": "Button Link"
    },
    {
      "type": "checkbox",
      "id": "hide_mobile",
      "label": "Hide Announcement Bar on mobile?",
      "default": true
    }
  ]
}
{% endschema %}
