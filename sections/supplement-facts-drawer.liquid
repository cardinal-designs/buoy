{{ 'component-supplements-drawer.css' | asset_url | stylesheet_tag }}

{% assign ss = section.settings %}

<div id="supplementSideDrawer" class="supplement-side-drawer">
  <div class="drawer__wrapper-main">

    <div class="drawer__header">
      <a href="javascript:void(0)" class="drawer__close js-close-supplement-drawer">
        <span>Close</span> {% render 'icon-close-drawer' %}</a>
    </div>  
    <div class="drawer__title-wrapper">
      {%- if ss.product_name != blank -%}
        <div class="drawer__product-name">{{ ss.product_name }}</div>
      {%- endif -%}
      {%- if ss.title != blank -%}
        <div class="drawer__title">{{ ss.title }}</div>
      {%- endif -%}
    </div>

    <div class="drawer__serving-container">
      {%- for block in section.blocks -%}
        {%- assign bs = block.settings -%}
          {%- if block.type == 'serving' -%}
            <div class="drawer__serving">
              <div class="drawer__serving-wrapper">
                {%- if bs.icon_serving != blank -%}
                  <img class="" src="{{ bs.icon_serving | img_url: 'master' }}"  alt="{{ bs.icon_serving.alt }}">
                {%- endif -%}
                {%- if bs.serving_title != blank -%}
                  <div class="drawer__serving-title">{{ bs.serving_title }}</div>
                {%- endif -%}
              </div>
              <ul class="drawer__serving-list">
                {%- if bs.serving_item_one != blank -%}
                  <li class="drawer__serving-item">{{ bs.serving_item_one }}</li>
                {%- endif -%}
                {%- if bs.serving_item_two != blank -%}
                  <li class="drawer__serving-item">{{ bs.serving_item_two }}</li>
                {%- endif -%}
                {%- if bs.serving_item_three != blank -%}
                  <li class="drawer__serving-item">{{ bs.serving_item_three }}</li>
                {%- endif -%}
              </ul>
            </div>
          {%- endif -%}
      {%- endfor -%}
    </div>

    <div class="drawer__recommended">
      {%- for block in section.blocks -%}
        {%- assign bs = block.settings -%}
          {%- if block.type == 'recommended' -%}
            {%- if bs.heading != blank -%}
              <div class="drawer__recommended-heading">{{ bs.heading }}</div>
            {%- endif -%}
            {%- if bs.title != blank -%}
              <div class="drawer__recommended-title">{{ bs.title }}</div>
            {%- endif -%}
            {%- if bs.sub_title != blank -%}
              <div class="drawer__recommended-subtitle">{{ bs.sub_title }}</div>
            {%- endif -%}
            {%- if bs.content != blank -%}
              <div class="drawer__recommended-content">{{ bs.content }}</div>
            {%- endif -%}
          {%- endif -%}
      {%- endfor -%}
    </div>

    <div class="drawer__mobile-continue hide-desktop">
      <a href="javascript:void(0)" class="drawer__continue-cta button button--full-width">Keep Shopping</a>        
    </div>

    <div class="drawer__table">
      {%- for block in section.blocks -%}
        {%- assign bs = block.settings -%}
        {%- if block.type == 'table' -%}
          {%- if bs.table_image != blank -%}
            <div class="drawer__table-image-wrapper">
              {% render 'lazy-image' image: bs.table_image, fade: true %}
            </div>
          {%- endif -%}
        {%- endif -%}
      {%- endfor -%}
    </div>

    <div class="drawer__ingredients">
      {%- for block in section.blocks -%}
        {%- assign bs = block.settings -%}
          {%- if block.type == 'ingredients' -%}
            {%- if bs.content != blank -%}
              <p class="drawer__ingredients-content">{{ bs.content }}</p>
            {%- endif -%}
          {%- endif -%}
      {%- endfor -%}
    </div>

    <div class="drawer__line"></div>

    <div class="drawer__info">
      <ul class="drawer__info-list">
        <li class="drawer__info-list-item">
          {% render 'icon-close-drawer' %}
          <span>No Sugar, Sweeteners or Flavors</span>
        </li>
        <li class="drawer__info-list-item">
          {% render 'icon-close-drawer' %}
          <span>No Sugar, Sweeteners or Flavors</span>
        </li>
        <li class="drawer__info-list-item">
          {% render 'icon-close-drawer' %}
          <span>No Sugar, Sweeteners or Flavors</span>
        </li>
      </ul>
    </div>

    {% comment %} <div class="drawer__desktop-continue hide-mobile">
      <a href="javascript:void(0)" class="drawer__continue-cta button button--full-width">Keep Shopping</a>        
    </div> {% endcomment %}
  </div>
</div>


