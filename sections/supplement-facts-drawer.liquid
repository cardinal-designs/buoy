{% assign ss = section.settings %}

<div id="supplementSideDrawer" class="supplement-side-drawer">
  <div class="main-side-drawer">
    <div class="drawer_header">
      <a href="javascript:void(0)" class="js-close-supplement-drawer">&times;</a>
    </div>  
    <div class="drawer_title-wrapper">
      <div class="drawer_product-name">{{ ss.product_name }}</div>
      <div class="drawer_title">{{ ss.title }}</div>
    </div>
    <div class="drawer_cover_cls">  

      <div class="hide-desktop mobile-supplement-continue">
        <a href="javascript:void(0)" class="button button--full-width">Continue Shopping</a>        
      </div>
    </div>  
  </div>
</div>


{% schema %}
  {
    "name": "Supplement Facts Drawer",
    "settings": [
      {
        "type": "text",
        "id": "product_name",
        "label": "Product Name"
      },
      {
        "type": "text",
        "id": "title",
        "label": "Title"
      }
    ],
    "presets": [
      {
        "name": "Supplement Facts Drawer"
      }
    ]
  }
{% endschema %}