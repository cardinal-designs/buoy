{{ 'section-benefits.css' | asset_url | stylesheet_tag }}

<div class="benefits__container">
  <div class="page-width">
  </div>
</div>

{% schema %}
{
  "name": "Benefits",
  "class": "spaced-section--full-width",
  "tag": "section",
  "settings": [
	{
    "type": "text",
      "id": "review_emoji",
      "label": "Review Emoji"
    },
	{
    "type": "text",
      "id": "head-title",
      "default": "Column",
        "label": "Heading"
    },
    {
      "type": "textarea",
      "id": "sub-text",
      "label": "Content",
      "default": "<p>Pair text with an image to focus on your chosen product, collection, or blog post. Add details on availability, style, or even provide a review.</p>"
    },
    {
      "type": "text",
      "id": "button_label",
      "default": "Button label",
      "label": "t:sections.multicolumn.settings.button_label.label"
    },
    {
      "type": "url",
      "id": "button_link",
      "label": "t:sections.multicolumn.settings.button_link.label"
    },
    {
      "type": "select",
      "id": "background",
      "label": "Background",
      "options": [
        {
          "value": "top",
          "label": "Gradient Top to Bottom"
        },
        {
          "value": "bottom",
          "label": "Gradient Bottom to Top"
        },
        {
          "value": "bg_color",
          "label": "Background Color"
        },
        {
          "value": "none",
          "label": "None"
        }
      ],
      "default": "none"
    },
    {
      "type": "checkbox",
      "id": "add_top_border",
      "label": "Add Top Border"
    },
    {
      "type": "checkbox",
      "id": "add_bottom_border",
      "label": "Add Bottom Border"
    }
  ],
  "blocks": [
    {
      "type": "image",
      "name": "Image",
      "settings": [
        {
          "type": "header",
          "content": "Image Column"
        },
        {
          "type": "image_picker",
          "id": "image",
          "label": "Image"
        },
        {
          "type": "textarea",
          "id": "tags",
          "label": "Tags"
        },
        {
          "type": "text",
          "id": "title",
          "label": "Title",
          "default": "Title"
        },
        {
          "type": "textarea",
          "id": "content",
          "label": "Content",
          "default": "Content"
        },
        {
          "type": "text",
          "id": "reviewer_name",
          "label": "Reviewer Name",
          "default": "Reviewer Name"
        },
        {
          "type": "header",
          "content": "Video Column"
        },
        {
          "type": "image_picker",
          "id": "video_poster",
          "label": "Video Poster"
        },
        {
          "type": "text",
          "id": "video",
          "label": "Video"
        },
        {
          "type": "image_picker",
          "id": "video_image",
          "label": "Image"
        }

      ]
    }
  ],
   "presets": [
      {
        "name": "Benefits"
      }
    ]
}
{% endschema %}