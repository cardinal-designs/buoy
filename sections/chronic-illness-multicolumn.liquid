{{ 'multicolumn.css' | asset_url | stylesheet_tag }}

<div class="chronic-multicolumn__container">
  <div class="chronic-multicolumn__left">
    <p class="sh3">{{ section.settings.title }}</p>
  <div class="chronic-multicolumn__left-inner">
    {% for block in section.blocks %}
      {% if block.type == 'testimonial' %}
      {% endif %}
    {% endfor %}
  </div>
  </div>
  <div class="chronic-multicolumn__right">
    {% for block in section.blocks %}
      {% if block.type == 'block' %}
        <div class="chronic-multicolumn__list-item">
          {%  render 'icon-checkmark' %}
        <p class="sh2">{{ block.settings.text }}</p>
        </div>
      {% endif %}
    {% endfor %}
  </div>
</div>

{% schema %}
{
  "name": "Multicolumn",
  "settings": [
    {
      "type": "text",
      "id": "title",
      "label": "Title"
    },
    {
      "type": "select",
      "id": "column_alignment",
      "options": [
        {
          "value": "left",
          "label": "Left alignment"
        },
        {
          "value": "center",
          "label": "Center Alignment"
        }
      ],
      "default": "center",
      "label": "Column Alignment"
    },
    {
      "type": "text",
      "id": "right_title",
      "label": "Right Title"
    },
    {
      "type": "checkbox",
      "id": "swipe_on_mobile",
      "default": true,
      "label": "Swipe on Mobile?" 
    }
  ],
  "blocks": [
      {
      "type": "testimonial",
      "name": "testimonial",
      "settings": [
    	{
          "type": "text",
          "id": "subtitle",
          "label": "Subtitle"
        },
        {
          "type": "textarea",
          "id": "testimonial",
          "label": "Testimonial"
        },
        {
          "type": "text",
          "id": "author",
          "label": "Author"
        },
        {
          "type": "text",
          "id": "button_label",
          "label": "Button label"
        },
        {
          "type": "url",
          "id": "button_link",
          "label": "Button link"
        }
      ]
    },
    {
      "type": "block",
      "name": "List Item",
      "settings": [
        {
          "type": "text",
          "id": "text",
          "label": "Text"
        },
        {
          "type": "text",
          "id": "button_label",
          "label": "Button label"
        },
        {
          "type": "url",
          "id": "button_link",
          "label": "Button link"
        }
      ]
    }
  ],
   "presets": [
    {
      "name": "Multicolumn"
    }
  ]
}
{% endschema %}

