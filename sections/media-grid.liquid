{{ 'section-media-grid.css' | asset_url | stylesheet_tag }}

<div class="page-width media-grid__container">
  <p class="sh3">{{ section.settings.suptitle }}</p>
  <h1>{{ section.settings.title }}</h1>
  <p class="sh2">{{ section.settings.text }}</p>
  <div class="media-grid">
  {% for block in section.blocks %}
    {% if block.settings.video != blank %}
    <video autoplay muted loop>
      <source src="{{ block.seettings.video }}" type="video/mp4">
    </video>
    {% elsif block.settings.image != blank %}
    <img src="{{ block.settings.image |img_url:'master' }}"/>
    {% endif %}
  {% endfor %}
  </div>
</div>

{% schema %}
{
  "name": "Media Grid",
  "class": "spaced-section--full-width",
  "tag": "section",
  "settings": [
	{
    "type": "text",
      "id": "suptitle",
      "label": "Suptitle"
    },
	{
    "type": "textarea",
      "id": "title",
      "label": "Title"
    },
	{
    "type": "textarea",
      "id": "text",
      "label": "Text"
    }
  ],
  "blocks": [
    {
      "type": "block",
      "name": "Block",
      "settings": [
        {
          "type": "image_picker",
          "id": "image",
          "label": "Image"
        },
        {
          "type": "text",
          "id": "video",
          "label": "Video URL"
        }
      ]
    }
  ],
   "presets": [
      {
        "name": "Media Grid"
      }
    ]
}
{% endschema %}